#include <iostream>
#include<cstring>
 
using namespace std;
 
int main() {
    string n;
    int i = 0;
    int len;
 
    cin >> n;
    len = n.length();
 
    if (n[i] >= 97 && n[i] <= 122) {
        n[i] -=32;
    }
    for (i = 0; i < len; i++) {
 
            cout << n[i];
 
    }
    return 0;
}
 
