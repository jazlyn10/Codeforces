#include <iostream>
using namespace std;

int main() {
    int k, n, w;
    cin >> k >> n >> w;
    int total = 0;

    for(int i = 0; i < w; i++ ){
        int a = (i+1) * k;
        total = total + a;
    }

    if (n >= total) {
        cout << 0;
    }
    else
        cout << total - n;

    return 0;
}
